@model List<Category>
@if(TempData["success"] != null)
{
    <h4>@TempData["success"]</h4>
}
<div class="container">

    @*TITLE*@
    <div class="col-6">
        <h2 class="text-primary">Category List</h2>
    </div>

    @*BUTONS*@
    <div class="row">
        <div class="text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary rounded">
                <i class="bi bi-plus-circle"></i> Add
            </a>
        </div>
    </div>

    @*CATEGORI LIST*@
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td> @item.Name </td>
                    <td> @item.DisplayOrder </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"
                                class="btn btn-primary mx-2  rounded ">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"
                                class="btn btn-danger mx-2 rounded">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>