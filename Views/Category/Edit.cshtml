@model Category

<form method="post">
    <div class="border p-3 mt-4">

        @*TITLE*@
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>

        @*INPUT FIELDS*@
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control rounded" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control rounded" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        @*BUTTONS*@
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary rounded form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index"
                    class="btn btn-secondary border rounded form-control">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}